<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
<!--    <display-name>gdpc</display-name>-->
    <session-config>
        <session-timeout>-1</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>pages/protected/distributor/index.xhtml</welcome-file>
        <!--<welcome-file>index.xhtml</welcome-file>-->
    </welcome-file-list>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <!--<param-value>redmond</param-value>-->
        <param-value>bootstrap</param-value>
    </context-param>
    <filter>
        <filter-name>LoginCheckFilter</filter-name>
        <filter-class>com.gardnerdenver.filter.LoginCheckFilter</filter-class>
        <init-param>
            <param-name>loginActionURI</param-name>
            <param-value>pages/public/login.xhtml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LoginCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminPagesFilter</filter-name>
        <filter-class>com.gardnerdenver.filter.AdminPagesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminPagesFilter</filter-name>
        <url-pattern>/pages/protected/factory/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>DistributorUserPagesFilter</filter-name>
        <filter-class>com.gardnerdenver.filter.DistributorUserPagesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DistributorUserPagesFilter</filter-name>
        <url-pattern>/pages/protected/distributor/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RelatorioServlet</servlet-name>
        <servlet-class>com.gardnerdenver.servlet.RelatorioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RelatorioServlet</servlet-name>
        <url-pattern>/RelatorioServlet</url-pattern>
    </servlet-mapping>
</web-app>
